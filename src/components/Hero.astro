---
import { Image } from "astro:assets";
import heroImage from "../assets/hero-small.jpg";
const { data } = Astro.props;
---

<section class="hero">
  <div>
    <h1
      class="relative z-10 bg-gradient-to-b from-dark_cyan-500 to-transparent bg-clip-text text-center font-brand text-5xl sm:text-7xl md:text-8xl lg:text-9xl"
    >
      {data.heading}
    </h1>
    <p
      class="text-shadow relative z-50 text-center font-brandSub text-lg uppercase tracking-wide text-white opacity-90 blur-none drop-shadow-xl md:text-3xl"
    >
      {data.subheading}
    </p>
  </div>
  <svg xmlns="http://www.w3.org/2000/svg" version="1.1" style="height: 0;">
    <defs>
      <filter id="outline-shadow">
        <feMorphology
          in="SourceAlpha"
          operator="dilate"
          radius="2"
          result="expanded"></feMorphology>
        <feFlood flood-color="black" flood-opacity="0.6" result="color"
        ></feFlood>
        <feComposite in="color" in2="expanded" operator="in" result="shadow"
        ></feComposite>
        <feGaussianBlur in="shadow" stdDeviation="3" result="blurred"
        ></feGaussianBlur>
        <feOffset in="blurred" dx="4" dy="5" result="offsetBlurred"></feOffset>
        <feComposite in="SourceGraphic" in2="offsetBlurred" operator="over"
        ></feComposite>
      </filter>
    </defs>
  </svg>
  <Image
    src={heroImage}
    class="absolute left-0 top-0 z-0 h-full w-full object-cover"
    alt="people paddleing"
  />
</section>

<style>
  .hero {
    position: relative;

    width: 100%;
    height: 100dvh;
  }

  .hero div {
    position: absolute;
    z-index: 100;
    width: 100%;
    top: 30%;

    left: 50%;

    transform: translate(-50%, -50%);
  }

  .hero h1 {
    color: transparent;
    filter: url(#outline-shadow);
  }
</style>
