---
import { getRelativeLocaleUrl } from "astro:i18n";
import {
  getLangFromUrl,
  useTranslations,
  useTranslationsForRoutes,
  navLinks,
} from "../i18n/utils";

import { Image } from "astro:assets";
import Logo from "../assets/logo.png";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const path = useTranslationsForRoutes(lang);
const navData = navLinks(t, path);
---

<footer class="bg-gray-900 pt-12 font-light text-gray-300">
  <div class="container relative mx-auto flex flex-col sm:flex-row lg:px-40">
    <div class="flex flex-col justify-center p-4 sm:w-1/2">
      <nav class="flex flex-wrap">
        {
          navData.map((navLink) => (
            <a
              href={getRelativeLocaleUrl(lang, navLink.path)}
              class="px-2 py-1 uppercase hover:text-yellow-500"
            >
              {navLink.name}
            </a>
          ))
        }
      </nav>
      <div class="w-full p-2 xl:mr-auto xl:w-4/12">
        <div class="mb-6">
          <a
            href="https://wa.me/3015867557"
            target="_blank"
            class="hover:text-yellow-500">+57 3015867557</a
          >
          <br />
          <a href="mailto:suplovers.co@gmail.com" class="hover:text-yellow-500"
            >suplovers.co@gmail.com</a
          >
        </div>
        <div class="inline-flex flex-wrap space-x-3">
          <a
            target="_blank"
            href="https://www.instagram.com/suplovers.co/"
            class="flex items-center hover:text-yellow-500"
            aria-label="instagram"
          >
            <svg viewBox="0 0 24 24" fill="currentColor" class="h-5 w-5">
              <path
                d="M12 2c2.717 0 3.056.01 4.122.06 1.065.05 1.79.217 2.428.465.66.254 1.216.598 1.772 1.153a4.908 4.908 0 0 1 1.153 1.772c.247.637.415 1.363.465 2.428.047 1.066.06 1.405.06 4.122 0 2.717-.01 3.056-.06 4.122-.05 1.065-.218 1.79-.465 2.428a4.883 4.883 0 0 1-1.153 1.772 4.915 4.915 0 0 1-1.772 1.153c-.637.247-1.363.415-2.428.465-1.066.047-1.405.06-4.122.06-2.717 0-3.056-.01-4.122-.06-1.065-.05-1.79-.218-2.428-.465a4.89 4.89 0 0 1-1.772-1.153 4.904 4.904 0 0 1-1.153-1.772c-.248-.637-.415-1.363-.465-2.428C2.013 15.056 2 14.717 2 12c0-2.717.01-3.056.06-4.122.05-1.066.217-1.79.465-2.428a4.88 4.88 0 0 1 1.153-1.772A4.897 4.897 0 0 1 5.45 2.525c.638-.248 1.362-.415 2.428-.465C8.944 2.013 9.283 2 12 2zm0 5a5 5 0 1 0 0 10 5 5 0 0 0 0-10zm6.5-.25a1.25 1.25 0 0 0-2.5 0 1.25 1.25 0 0 0 2.5 0zM12 9a3 3 0 1 1 0 6 3 3 0 0 1 0-6z"
              ></path>
            </svg><span class="ms-1">Instagram</span></a
          >
        </div>
      </div>
    </div>
    <div class="order-first flex justify-center sm:order-last sm:w-1/2">
      <a href="/" class="block w-1/3">
        <Image src={Logo} alt="logo" class="h-full object-contain" />
      </a>
    </div>
  </div>
  <div class="py-4 text-center">
    <hr class="mb-4 opacity-25" />
    <p class="text-sm">Copyright &copy; 2023 SUPLOVERS.CO</p>
  </div>
</footer>
