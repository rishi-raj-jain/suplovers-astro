---
import Layout from "../layouts/Layout.astro";
import ButtonWhatsApp from "../components/ButtonWhatsApp.astro";
const { data } = Astro.props;
---

<Layout data={data.headMetaData}>
  <main class="bg-beige-500 p-10">
    <h1 class="text-center font-titles text-4xl capitalize">{data.heading}</h1>
    <p class="mt-4 text-center font-paragraphs text-lg lg:mx-auto lg:w-3/4">
      {data.description}
    </p>
    <div class="flex flex-col justify-center gap-2 text-center">
      <ButtonWhatsApp bgColor="bg-lime_green-600" />

      <a
        href="mailto:suplovers.co@gmail.com"
        class="mt-5 flex h-full items-center self-center rounded bg-lime_green-600 px-4 py-4 font-paragraphs text-xl font-medium text-white"
      >
        <svg width="1em" height="1.5em" viewBox="0 0 24 24" fill="currentColor">
          <path
            d="M3 3h18a1 1 0 0 1 1 1v16a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V4a1 1 0 0 1 1-1zm9.06 8.683L5.648 6.238 4.353 7.762l7.72 6.555 7.581-6.56-1.308-1.513-6.285 5.439z"
          >
          </path>
        </svg>
        <span class="ms-1">Email</span>
      </a>
    </div>
  </main>
</Layout>
